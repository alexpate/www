---
layout: layouts/base.njk
templateClass: container
---
<img src="/img/featured-images/{{featured_image }}" class="project-featured-image"/>
<h1 class="title">{{ title }}</h1>
<p class="meta"><strong>Role:</strong> {{role}} <br /> <strong>Year:</strong> {{ year }}</p>

{%- for tag in tags | filterTagList -%}
{%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
<a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
{%- endfor %}

{{ content | safe }}

{%- set nextPost = collections.projects | getNextCollectionItem(page) %}
{%- set previousPost = collections.projects | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<hr>
<ul>
  {%- if nextPost %}<li>Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>{% endif %}
  {%- if previousPost %}<li>Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
